<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/white"
	tools:context="com.pyt.postyourfun.Fragment.BuyImageFragment">

	<!-- TODO: Update blank fragment layout -->

	<ScrollView
		android:id="@+id/scrollView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:padding="10dp">

			<TextView
				android:id="@+id/textView6"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:text="Select your park"
				android:textAppearance="?android:attr/textAppearanceMedium" />

			<Spinner
				android:id="@+id/park_spinner"
				android:layout_width="240dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:spinnerMode="dropdown" />

			<TextView
				android:id="@+id/textView7"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:text="Select your ride"
				android:textAppearance="?android:attr/textAppearanceMedium" />

			<Spinner
				android:id="@+id/ride_spinner"
				android:layout_width="240dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:spinnerMode="dropdown" />

			<TextView
				android:id="@+id/textView8"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:text="Enter your image number"
				android:textAppearance="?android:attr/textAppearanceMedium" />

			<Button
				android:id="@+id/images"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:background="@xml/button_background"
				android:text="View ride image gallery"
				android:textColor="@android:color/white"
				android:visibility="visible" />
		</LinearLayout>
	</ScrollView>
</FrameLayout>
